{
  "name": "opus-prototype",
  "version": "0.0.0",
  "description": "prototype compiler for the opus programming language",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json -w",
    "clean": "rm -rf build/*",
    "start:pure": "node ./build/index.js",
    "start": "npm run build && npm run start:pure",
    "start:run": "run() { npm start --silent -- \"$@\" | node; }; run",
    "start:in": "cat > .tmp.op && npm run start -- -- .tmp.op && rm .tmp.op",
    "start:example": "run() { npm start -- -- ./examples/${1:-test}.op \"${@:2}\"; }; run",
    "start:run:example": "run() { npm start --silent -- -- ./examples/${1:-test}.op \"${@:2}\" | node; }; run",
    "and-run": "run() { npm run $1 --silent -- \"${@:2}\" | node; }; run",
    "test": "jest --config ./test/jest.config.js",
    "test:coverage": "jest --config ./test/jest.config.js --coverage",
    "test:watch": "jest --config ./test/jest.config.js --watch",
    "lint": "eslint ."
  },
  "keywords": [
    "opus",
    "language",
    "compiler",
    "algebraic-effects"
  ],
  "author": "Tate Burns",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/preset-env": "^7.12.11",
    "@types/jest": "^26.0.20",
    "@types/minimist": "^1.2.1",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.19.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jest-watch-typeahead": "^0.6.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.3.2"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "minimist": "^1.2.5",
    "module-alias": "^2.2.2"
  }
}
