{
  "compilerOptions": {
    "outDir": "./build/",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,

    "target": "es6",
    "module": "commonjs",

    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "&/*": ["src/*"],
      "&test/*": ["test/*"]
    }
  },
  "include": [
    "src",
    "test"
  ]
}
